        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-friend_select",
            "andOr": [
              {
                "is": "SCREEN",
                "value": "menu-units-team_1"
              },
              {
                "is": "SCREEN",
                "value": "menu-units-team_2"
              }
            ],
