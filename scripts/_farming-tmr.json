//@formatter:off
{
  "vars": [
    {
      "name": "_route_from_tmr",
      "display": "After TMR Farming",
      "value": "RAID",
      "type": "STRING",
      "varValueId": "ROUTES",
      "modify": "EDITABLE",
      "order": 10,
      "tierId": "state-route",
      "description": "Where to go next after TMR Farming is finished.  Default is RAID to Raid."
    }
  ],
  "varValues": [
    {"group":"ROUTES", "title":"TMR Farm", "value":"FARM"}
  ],
  "states":{

    "farm-menu": {
      "name": "Farm - Menu",
      "description": "Start inside the Earthshrine menu",
      "includes": [
        "_common-screen_saver",
        "_farm-menu-friends",
        "_common-ml-mission",
        "_common-ml-goals",
        "_farm-menu-find_depart_team",
        "_farm-menu-depart",
        "_farm-menu-to_battle",
        "_es-from_battle_to_results",
        "_common-no_op"
      ],
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-energy_recovery",
            "and": [
              {
                "is": "GREATER",
                "var": "refresh-farm",
                "value": "0"
              }
            ]
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-energy_recovery-lapis"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-use_lapis",
            "and": [
              {
                "is": "GREATER",
                "var": "refresh-farm",
                "value": "0"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Refreshed Energy"
            },
            {
              "type": "ADD",
              "var": "refresh-farm",
              "value": "-1"
            },
            {
              "type": "TAP",
              "value": "menu-use_lapis-yes"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "EQUAL",
            "var": "min-energy",
            "value": "0",
            "and": [
              {
                "is": "LESS",
                "var": "refresh-farm",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "refresh-farm",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "min-energy",
              "value": "1"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-missions-select",
            "and": [
              {
                "is": "GREATER",
                "value": "${farm-timer}",
                "var": "_module",
                "or": [
                  {"is": "EQUAL", "var": "refresh-farm", "value": "0", "and": [ { "not": "CALL", "value":"@isMinEnergyAvailable" } ]}
                ]
              },
              {
                "is": "EQUAL",
                "value": "1",
                "var": "leave-farm"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Time limit and or energy limit hit, moving to ${_route_from_tmr}"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "MOVE",
              "value": "any_to_home",
              "args": { "toState": "${_route_from_tmr}" }
            }
          ]
        }
      ]
    },

    "_farm-menu-find_depart_team": {
      "name": "Farm - Find Depart Team",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-depart",
            "and": [
              {
                "not": "SCREEN",
                "value": "menu-depart-team_${farm-party-index}"
              }
            ]
          },
          "actions": [
            {
              "type": "SWIPE_RIGHT",
              "value": "menu-depart-units"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },

    "_farm-menu-to_battle": {
      "name": "Farm - Menu Ending Include",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "LAP",
              "value": "BATTLE"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "ADD",
              "var": "runs",
              "value": "1"
            },
            {
              "type": "INFO",
              "value": "Starting run ${runs}"
            },
            {
              "type": "MOVE",
              "value": "farm-battle"
            }
          ]
        }
      ]
    },

    // Leave this alone, override "_farm-battle" instead
    "farm-battle": {
      "name": "Farm - Battle",
      "description": "!",
      "includes": [
        "_farm-battle",
        "_common-screen_saver",
        "_es-from_battle_to_results",
        "_common-no_op"
      ]
    },

    // Override this state
    "_farm-battle": {
      "name": "Farm - Battle",
      "includes": [
        "_common_battle-three_attack"
      ]
    },

    "_es-from_battle_to_results": {
      "name": "Farm - From Battle To Results",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-results-points",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-results-units"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-items"
              }
            ]
          },
          "actions": [
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "SET",
              "var": "setup",
              "value": "2"
            },
            {
              "type": "MOVE",
              "value": "farm-results"
            }
          ]
        }
      ]
    },

    "_farm-to_results": {
      "name": "Farm - To Results",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-results-points",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-results-units"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-items"
              }
            ]
          },
          "actions": [
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "MOVE",
              "value": "farm-results"
            }
          ]
        }
      ]
    },

    "farm-results": {
      "name": "Farm - Results",
      "description": "!",
      "variables":{
        "safety": {
          "type": "INT",
          "value": "0"
        }
      },
      "includes": [
        "_common-screen_saver",
        "_common_mr-points",
        "_common_mr-units",
        "_common_mr-items",
        "_common_mr-friend_request",
        "_farm-to_menu",
        "_common-no_op"
      ],
      "statements": [
        // Safety script to tap, the next area if the screen pauses for 30 seconds, may two times
        {
          "condition": {
            "is": "LESS",
            "var": "safety",
            "value": "2",
            "and": [
              {
                "is": "GREATER",
                "var": "_loops",
                "value": "30"
              }
            ]
          },
          "actions": [
            { "type": "ADD", "var": "safety", "value": "1"},
            { "type": "INFO", "value": "Screen is pausing, attempting to click to continue #${safety}" },
            { "type": "CALL", "value": "@keepAlive" },
            { "type": "TAP", "value": "menu-results-next" },
            { "type": "WAIT", "value": "500" },
            { "type": "REPEAT" }
          ]
        }
      ]
    },

    "_farm-to_battle": {
      "name": "To Battle",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "LAP",
              "value": "BATTLE"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "ADD",
              "var": "runs",
              "value": "1"
            },
            {
              "type": "INFO",
              "value": "Starting run ${runs}"
            },
            {
              "type": "MOVE",
              "value": "farm-battle"
            }
          ]
        }
      ]
    },

    "_reset-include_farming": {
      "name": "Reset - Farming",
      "statements": [
        {
          "condition": {
            "is": "BOOLEAN",
            "value": "true"
          },
          "actions": [
            {
              "type": "SET",
              "value": "0",
              "var": "setup"
            },
            {
              "type": "INFO",
              "value": "Reset Run Count"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "runs"
            }
          ]
        }
      ]
    },

    "_farm-to_menu": {
      "name": "To Menu",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-missions-select",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-goal_list"
              },
              {
                "is": "SCREEN",
                "value": "menu-friend_select"
              },
              {
                "is": "SCREEN",
                "value": "menu-friend_select-empty"
              },
              {
                "is": "SCREEN",
                "value": "menu-depart"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Ending run ${runs}"
            },
            {
              "type": "MOVE",
              "value": "farm-menu"
            }
          ]
        }
      ]
    },

    "home_to_farm": {
      "name"       : "Home - To Farm",
      "description": "!",
      "includes"   : [
        "_home_daily_fixes",
        "_farm-to_menu",
        "_common-no_op"
      ],
      "statements" : [
        {
          "actions"   : [
            {
              "type"  : "MOVE",
              "value" : "home_to_earthshrine"
            }
          ]
        }
      ]
    },

    "home_to_earthshrine": {
      "name": "Home - To Earthshrine",
      "description": "Navigate to the Earthshrine and farm",
      "includes": [
        "_home_daily_fixes",
        "_farm-to_menu",
        "_common-no_op"
      ],
      "variables": {
        "_first": {
          "type": "INT",
          "value": "0"
        }
      },
      "statements": [
        {
          "condition": {
            "is": "EQUAL",
            "var": "_first",
            "value": "0"
          },
          "actions": [
            { "type": "CALL", "value": "@keepAlive" },
            { "type": "SET", "var": "_first", "value": "1"}
          ]
        },
        { // After 5 minutes of trying, give up
          "condition": {
            "is": "GREATER",
            "var": "_loops",
            "value": "300"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Could not find farming location, switching to ${_route_from_tmr}"
            },
            {
              "type": "MOVE",
              "value": "any_to_home",
              "args": {
                "toState": "${_route_from_tmr}"
              }
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Going to World"
            },
            {
              "type": "TAP",
              "value": "menu-worlds"
            },
            {
              "type": "WAIT",
              "value": "3000"
            },
            {
              "type": "REPEAT",
              "value": "false"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-world-grandshelt_isles", "and": [{
              "is": "SCREEN",
              "value": "menu-world-grandshelt_isles-earthshrine"
            }]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Grandshelf Isles, found Earth Shrine"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "TAP",
              "value": "menu-location-earthshrine-default"
            },
            {
              "type": "WAIT",
              "value": "2000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-world-grandshelt_isles"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Grandshelf Isles, looking for Earth Shrine"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "SLOW_RIGHT",
              "value": "screen-center-large",
              "count": "9"
            },
            {
              "type": "SLOW_DOWN",
              "value": "screen-center-large",
              "count": "2"
            },
            {
              "type": "SLOW_LEFT",
              "value": "screen-center-large",
              "count": "4"
            },
            {
              "type": "INFO",
              "value": "Tapping Earthshrine"
            },
            {
              "type": "TAP",
              "value": "menu-location-earthshrine"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-world-grandshelt"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Grandshelt"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "TAP",
              "value": "menu-island-grandshelt_isles"
            },
            {
              "type": "WAIT",
              "value": "2000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-world-lapis"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Lapis"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "SLOW_LEFT",
              "value": "screen-center-large",
              "count": "5"
            },
            {
              "type": "TAP",
              "value": "menu-island-grandshelt"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-world-paladia"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Paladia, Getting back to Lapis"
            },
            {
              "type": "TAP",
              "value": "menu-world-to_lapis"
            },
            {
              "type": "WAIT",
              "value": "500"
            },
            {
              "type": "TAP",
              "value": "menu-world-to_lapis-leave"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-world-common"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Random Land, Backing up"
            },
            {
			  "condition": {
				"is":"EQUAL",
				"var": "allow-soft_back",
				"value": "1"
			  },
              "type": "EVENT",
              "value": "back"
            },
            {
			  "condition": {
				"is":"EQUAL",
				"var": "allow-soft_back",
				"value": "0"
			  },
              "type": "TAP",
              "value": "menu-goal_list-back"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-missions-select"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Mission Select"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "MOVE",
              "value": "farm-menu"
            }
          ]
        }
      ]
    },

    "_farm-menu-depart": {
      "name": "Farm - Menu - Depart",
      "includes": [
        "_common-ml-depart"
      ]
    },

    "_farm-menu-friends": {
      "name": "Farm - Menu - Friends",
      "includes": [
        "_common-ml-friend_0",
        "_common-ml-friend_none"
      ]
    },

    "_any_router_to_farm": {
      "name": "Any - Home Can Goto Farm Screen?",
      "variables": {
        "toState": {
          "value": "FARM",
          "type": "STRING"
        }
      },
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home",
            "and": [
              {
                "is": "EQUAL",
                "value": "FARM",
                "var": "toState"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "MOVE",
              "value": "home_to_farm",
              "condition": {
                "is": "EQUAL",
                "value": "1",
                "var": "allow-farm"
              }
            },
            {
              "type": "SET",
              "value": "${_route_from_tmr}",
              "var": "toState"
            },
            {
              "type": "REPEAT"
            }
          ]
        }
      ]
    }

  }
}
