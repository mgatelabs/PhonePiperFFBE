              "type": "TAP",
              "value": "menu-companion_changed-ok"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "os-home",
            "or": [
              {
                "is": "SCREEN",
                "value": "os-home-top"
              },
              {
                "is": "SCREEN",
                "value": "os-home-bottom"
              },
              {
                "is": "SCREEN",
                "value": "os-home-left"
              },
              {
                "is": "SCREEN",
                "value": "os-home-right"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Home Screen Detected, resuming",
              "condition": {
                "is": "EQUAL",
                "var": "os-recovery",
                "value": "1"
              }
            },
            {
              "type": "TAP",
              "value": "os-app-icon_${os-icon}",
              "condition": {
                "is": "EQUAL",
                "var": "os-recovery",
                "value": "1"
              }
            },
            {
              "type": "MOVE",
              "value": "log-in",
              "condition": {
                "is": "EQUAL",
                "var": "os-recovery",
                "value": "1"
              }
            },
            {
              "type": "INFO",
              "value": "Stopping due to recovery"
            },
            {
              "type": "STOP"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-log_in_again"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Log in Required"
            },
            {
              "type": "MOVE",
              "value": "log-in"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-new_data"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "New Date - Log in Required"
            },
            {
              "type": "MOVE",
              "value": "log-in"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-title"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "App Restarted"
            },
            {
              "type": "MOVE",
              "value": "log-in"
            }
          ]
        },
      
        {
          "condition": {
            "var": "_loops",
            "is": "GREATER",
            "value": "${_loops_check}",
            "and":[
              {
                "is":"EQUAL",
                "var":"appCheckForced",
                "value":"0"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Too many cycles ${_loops}, need to restart app"
            },
            // Reset the counter, so the app will run after turning it back on
            {
              "type": "APP",
              "value": "CLOSE"
            },
            {
              "type": "APP",
              "value": "CHECK"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "SET",
              "var": "appCheckForced",
              "value": "1"
            },
            {
              "type": "REPEAT"
            }
          ]
        },
        {
          "condition": {
            "var": "_loops",
            "is": "LESS",
            "value": "${_loops_check}",
            "and":[
              {
                "is":"EQUAL",
                "var":"appCheckForced",
                "value":"1"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "appCheckForced",
              "value": "0"
            }
          ]
        },
        {
          "condition": {
            "var": "_loops",
            "is": "GREATER",
            "value": "${_loops_max}"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Too many cycles ${_loops}, stopping run"
            },
            // Reset the counter, so the app will run after turning it back on
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "STOP",
              "value": ""
            }
          ]
        }
      ]
    },
