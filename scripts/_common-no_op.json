    "_common-screen_saver": {
      "name": "Common - Screen Saver",
      "statements": [
        {
          "condition": {
            "var": "_screen_saver",
            "is": "GREATER",
            "value": "900",
            "and": [
              {
                "is": "EQUAL",
                "var": "allow-ss",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "INFO",
              "value": "Screen saver activated"
            },
            {
              "type": "EVENT",
              "value": "camera"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "EVENT",
              "value": "back"
            },
            {
              "type": "WAIT",
              "value": "15000"
            },
            {
              "type": "INFO",
              "value": "Returning"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },
    "_common-recovery_os": {
