//@formatter:off
{
  "vars": [
    {
      "name": "arena-safety-tap",
      "display": "Safety Tap",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "displayType": "BOOLEAN",
      "order": 10,
      "tierId": "enable",
      "values": [
        {"name": "Enabled", "value": "1"},
        {"name": "Disabled", "value": "0"}
      ],
      "description": "Enable / Disable Safety Tap"
    }
  ],
  "imports": [],
  "states": {

    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // COMMON
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////

    "_arena-battle-common": {
      "name": "Arena - Battle - Common Variables",
      "description":"Variables for segment and turn",
      "variables": {
        "segment": {
          "value": "-1",
          "type": "INT"
        },
        "turn": {
          "value": "1",
          "type": "INT"
        },
        "lbAttempts": {
          "value": "0",
          "type": "INT"
        },
        "modified": {
          "value": "0",
          "type": "INT"
        }
        ,
        "safetyClick": {
          "value": "0",
          "type": "INT"
        }
      },
      "statements": [
        {
          "condition": {
            "is":"EQUAL",
            "var": "segment",
            "value":"-1"
          },
          "actions":[
            {
              "type":"FINER",
              "value": "Resetting Unit Attempts"
            },
            {
              "type": "SET",
              "var": "unit0Attempts",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unit1Attempts",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unit2Attempts",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unit3Attempts",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unit4Attempts",
              "value": "0"
            }
          ]
        },
        {
          "condition":{
            "is":"EQUAL",
            "var":"arena-safety-tap",
            "value":"1"
          },
          "actions":[
            {
              "type":"ADD",
              "value":"1",
              "var": "safetyClick"
            }
          ]
        },
        {
          "condition":{
            "is":"GREATER",
            "var":"safetyClick",
            "value":"45"
          },
          "actions":[
            {
              "type":"SET",
              "value":"0",
              "var": "safetyClick"
            },
            {
              "type":"TAP",
              "value":"screen-top"
            }
          ]
        }
      ]
    },

    "@isUnitNotAttempted":{
      "name": "Is Unit Still Available?",
      "variables":{
        "index":{
          "value":"-1",
          "type": "INT"
        }
      },
      "statements":[
        {
          "actions":[
            {
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "0",
                "and":[
                  {
                    "is":"EQUAL",
                    "var":"unit0Attempts",
                    "value":"0"
                  }
                ]
              },
              "type":"RETURN",
              "value": "1"
            },
            {
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "1",
                "and":[
                  {
                    "is":"EQUAL",
                    "var":"unit1Attempts",
                    "value":"0"
                  }
                ]
              },
              "type":"RETURN",
              "value": "1"
            },{
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "2",
                "and":[
                  {
                    "is":"EQUAL",
                    "var":"unit2Attempts",
                    "value":"0"
                  }
                ]
              },
              "type":"RETURN",
              "value": "1"
            },{
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "3",
                "and":[
                  {
                    "is":"EQUAL",
                    "var":"unit3Attempts",
                    "value":"0"
                  }
                ]
              },
              "type":"RETURN",
              "value": "1"
            },{
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "4",
                "and":[
                  {
                    "is":"EQUAL",
                    "var":"unit4Attempts",
                    "value":"0"
                  }
                ]
              },
              "type":"RETURN",
              "value": "1"
            },
            {
              "type":"RETURN",
              "value": "0"
            }
          ]
        }
      ]
    },

    "@setUnitAttempted":{
      "name": "Set Unit Not Available?",
      "variables":{
        "index":{
          "value":"-1",
          "type": "INT"
        }
      },
      "statements":[
        {
          "actions":[
            {
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "0"
              },
              "type":"SET",
              "var":"unit0Attempts",
              "value": "1"
            },
            {
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "1"
              },
              "type":"SET",
              "var":"unit1Attempts",
              "value": "1"
            },{
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "2"
              },
              "type":"SET",
              "var":"unit2Attempts",
              "value": "1"
            },{
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "3"
              },
              "type":"SET",
              "var":"unit3Attempts",
              "value": "1"
            },{
              "condition":{
                "is":"EQUAL",
                "var":"index",
                "value": "4"
              },
              "type":"SET",
              "var":"unit4Attempts",
              "value": "1"
            },
            {
              "type":"RETURN",
              "value": "0"
            }
          ]
        }
      ]
    },

    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    // INSPECTION
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////

    "_arena-battle-health-check": {
      "name": "Arena - Battle - Health Checks",
      "description":"Check and see how many units have HP, MP and are alive or stopped",
      "variables": {
        "availableUnits": {
          "value": "0",
          "type": "INT"
        },
        "availableMpUnits": {
          "value": "0",
          "type": "INT"
        },
        "availableHpUnits": {
          "value": "0",
          "type": "INT"
        },
        "aliveUnits": {
          "value": "0",
          "type": "INT"
        },
        "unitAvailable0": {
          "value": "0",
          "type": "INT"
        },
        "unitAvailable1": {
          "value": "0",
          "type": "INT"
        },
        "unitAvailable2": {
          "value": "0",
          "type": "INT"
        },
        "unitAvailable3": {
          "value": "0",
          "type": "INT"
        },
        "unitAvailable4": {
          "value": "0",
          "type": "INT"
        },
        "unitAlive0": {
          "value": "0",
          "type": "INT"
        },
        "unitAlive1": {
          "value": "0",
          "type": "INT"
        },
        "unitAlive2": {
          "value": "0",
          "type": "INT"
        },
        "unitAlive3": {
          "value": "0",
          "type": "INT"
        },
        "unitAlive4": {
          "value": "0",
          "type": "INT"
        },
        "unitHp0": {
          "value": "0",
          "type": "INT"
        },
        "unitHp1": {
          "value": "0",
          "type": "INT"
        },
        "unitHp2": {
          "value": "0",
          "type": "INT"
        },
        "unitHp3": {
          "value": "0",
          "type": "INT"
        },
        "unitHp4": {
          "value": "0",
          "type": "INT"
        },
        "unitMp0": {
          "value": "0",
          "type": "INT"
        },
        "unitMp1": {
          "value": "0",
          "type": "INT"
        },
        "unitMp2": {
          "value": "0",
          "type": "INT"
        },
        "unitMp3": {
          "value": "0",
          "type": "INT"
        },
        "unitMp4": {
          "value": "0",
          "type": "INT"
        }
      },
      "statements": [
        // Check how many units are available to use
        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              { "is": "EQUAL", "value": "-1", "var":"segment"}
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "availableUnits",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAvailable0",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAvailable1",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAvailable2",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAvailable3",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAvailable4",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAvailable0",
              "value": "1",
              "condition": { "is": "CALL", "value": "@isUnitReady", "args": {"index": "0"} }
            },
            {
              "type": "SET",
              "var": "unitAvailable1",
              "value": "1",
              "condition": { "is": "CALL", "value": "@isUnitReady", "args": {"index": "1"} }
            },
            {
              "type": "SET",
              "var": "unitAvailable2",
              "value": "1",
              "condition": { "is": "CALL", "value": "@isUnitReady", "args": {"index": "2"} }
            },
            {
              "type": "SET",
              "var": "unitAvailable3",
              "value": "1",
              "condition": { "is": "CALL", "value": "@isUnitReady", "args": {"index": "3"} }
            },
            {
              "type": "SET",
              "var": "unitAvailable4",
              "value": "1",
              "condition": { "is": "CALL", "value": "@isUnitReady", "args": {"index": "4"} }
            },
            {
              "type": "MATH",
              "var": "availableUnits",
              "value": "${unitAvailable0}+${unitAvailable1}+${unitAvailable2}+${unitAvailable4}"
            },
            {
              "type": "FINER",
              "value": "Opening Battle Menu"
            },
            {
              "type": "TAP",
              "value": "battle-menu"
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "REPEAT"
            }
          ]
        },

        // With the battle menu open, lets check the health and mp for every unit
        {
          "condition": {
            "is": "SCREEN",
            "value": "battle-menu-arena",
            "and": [
              { "is": "EQUAL", "value": "-1", "var":"segment"}
            ]
          },
          "actions": [

            // How many have decent health?
            {
              "type": "SET",
              "var": "availableHpUnits",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitHp0",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitHp1",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitHp2",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitHp3",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitHp4",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitHp0",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "0", "mode": "menu", "percent" : "80"} }
            },
            {
              "type": "SET",
              "var": "unitHp1",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "1", "mode": "menu", "percent" : "80"} }
            },
            {
              "type": "SET",
              "var": "unitHp2",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "2", "mode": "menu", "percent" : "80"} }
            },
            {
              "type": "SET",
              "var": "unitHp3",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "3", "mode": "menu", "percent" : "80"} }
            },
            {
              "type": "SET",
              "var": "unitHp4",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "4", "mode": "menu", "percent" : "80"} }
            },
            {
              "type": "MATH",
              "var": "availableHpUnits",
              "value": "${unitHp0}+${unitHp1}+${unitHp2}+${unitHp4}"
            },
            // How many are alive?
            {
              "type": "SET",
              "var": "aliveUnits",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAlive0",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAlive1",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAlive2",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAlive3",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAlive4",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitAlive0",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "0", "mode": "menu", "percent" : "0"} }
            },
            {
              "type": "SET",
              "var": "unitAlive1",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "1", "mode": "menu", "percent" : "0"} }
            },
            {
              "type": "SET",
              "var": "unitAlive2",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "2", "mode": "menu", "percent" : "0"} }
            },
            {
              "type": "SET",
              "var": "unitAlive3",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "3", "mode": "menu", "percent" : "0"} }
            },
            {
              "type": "SET",
              "var": "unitAlive4",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasHp", "args": {"index": "4", "mode": "menu", "percent" : "0"} }
            },
            {
              "type": "MATH",
              "var": "aliveUnits",
              "value": "${unitAlive0}+${unitAlive1}+${unitAlive2}+${unitAlive4}"
            },
            // How many have enough MP?
            {
              "type": "SET",
              "var": "availableMpUnits",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitMp0",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitMp1",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitMp2",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitMp3",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitMp4",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "unitMp0",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasMp", "args": {"index": "0", "mode": "menu", "percent" : "25"} }
            },
            {
              "type": "SET",
              "var": "unitMp1",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasMp", "args": {"index": "1", "mode": "menu", "percent" : "25"} }
            },
            {
              "type": "SET",
              "var": "unitMp2",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasMp", "args": {"index": "2", "mode": "menu", "percent" : "25"} }
            },
            {
              "type": "SET",
              "var": "unitMp3",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasMp", "args": {"index": "3", "mode": "menu", "percent" : "25"} }
            },
            {
              "type": "SET",
              "var": "unitMp4",
              "value": 1,
              "condition": { "is": "CALL", "value": "@unitHasMp", "args": {"index": "4", "mode": "menu", "percent" : "25"} }
            },
            {
              "type": "MATH",
              "var": "availableMpUnits",
              "value": "${unitMp0}+${unitMp1}+${unitMp2}+${unitMp4}"
            },
            {
              "type": "FINER",
              "value": "Closing Battle Menu"
            },
            {
              "type": "TAP",
              "value": "battle-menu-back"
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "SET",
              "var": "segment",
              "value": "0"
            },
            {
              "type": "INFO",
              "value": "Found ${aliveUnits} Alive, ${availableUnits} Available, ${availableHpUnits} Hp above 80% and ${availableMpUnits} MP above 25% units on Turn ${turn}"
            },
            {
              "condition": {
                "not":"EQUAL",
                "var": "aliveUnits",
                "value": "4"
              },
              "type": "INFO",
              "value": "Alive Units (${unitAlive0},${unitAlive1},${unitAlive2},${unitAlive3},${unitAlive4})"
            },
            {
              "condition": {
                "not": "EQUAL",
                "var": "availableUnits",
                "value": "4"
              },
              "type": "INFO",
              "value": "Available Units (${unitAvailable0},${unitAvailable1},${unitAvailable2},${unitAvailable3},${unitAvailable4})"
            },
            {
              "condition": {
                "not":"EQUAL",
                "var": "availableMpUnits",
                "value": "4"
              },
              "type": "INFO",
              "value": "MP Available (${unitMp0},${unitMp1},${unitMp2},${unitMp3},${unitMp4})"
            },
            {
              "condition": {
                "not":"EQUAL",
                "var": "availableHpUnits",
                "value": "4"
              },
              "type": "INFO",
              "value": "MP Available (${unitHp0},${unitHp1},${unitHp2},${unitHp3},${unitHp4})"
            },
            {
              "type": "REPEAT"
            }
          ]
        }

      ]
    }



  }
}